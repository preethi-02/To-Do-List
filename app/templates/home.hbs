<NavBar/>
<div class="mb-3 d-flex justify-content-end">
  <LinkTo data-test-completed @route="completed" class="p-3 ">Completed Tasks</LinkTo>
  <LinkTo  data-test-pending @route="pending" class="p-3 ">Pending Tasks</LinkTo>
</div>
 
<div class="d-flex justify-content-center">
  <form class="mb-3"> 
    {{input placeholder=" Add your task" type="text" id="input" class="m-3 data-test-add-task" required=true}}
    <button data-test-createtodo type="submit" {{action "createToDo"}}class="btn btn-secondary">ADD</button>
  </form>
</div>
<div>
  <ul id="list" class="container mt-3">
    <ToDo @todos={{this.model.todos}}/>
  </ul>
</div>
