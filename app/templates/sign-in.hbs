<NavBar @isLoginPage="true"/>
<div>
  <div class="form-center">
    <h1 class="text-center">Login</h1>
    <form {{action "login" on="submit"}} >
      <div class="mb-3">
        <label class="form-label">Email</label>
        {{input value=email type="email" class="form-control data-test-email" required=true}}
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        {{input value=password type="password" class="form-control data-test-password" required=true}}
      </div>
      <div class="mb-3 text-center">
        <button data-test-login class="btn btn-secondary" type="submit">Login</button>
      </div>
    </form>
    <div class="mb-3 text0-center">
      Don't have an account?
      <LinkTo data-test-signup-link @route="sign-up" class="text-decoration-underline">Sign Up</LinkTo>
    </div>       
  </div>
</div>