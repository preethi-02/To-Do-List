{{#each this.todos as |item|}}
  <li class="mb-3">
    <h3 class={{if item.isCompleted "text-decoration-line-through" "text-decoration-none"}}>{{item.title}}</h3>
    <div>
      <button class="btn btn-sm {{if item.isCompleted "btn-outline-danger" "btn-outline-primary"}} me-3"  {{action "changeStatus" item.id item.isCompleted}}>
        {{if item.isCompleted "Mark as undone" "Mark as done"}}
      </button>
      <img src="pencil.png" width="20" height="15" class="me-3" data-bs-toggle="modal" data-bs-target="#EditWindow" {{action 'edit' item.id}}>       <!---->
      <img src="bin.png" width="18" height="15" class="me-3" {{action "deleteTask" item.id}}>
    </div>
  </li>
{{/each}}

<!-- Modal -->
  <div class="modal fade" id="EditWindow" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="EditWindowLabel">Edit Task</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          {{input type="text" value=EditedTitle}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" {{action 'editTask' EditedTitle}} class="btn btn-primary">Save Changes</button>
        </div>
      </div>
    </div>
  </div>
